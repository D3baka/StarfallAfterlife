<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="StarfallAfterlife.Launcher.Controls.SFAWaitingPopup"
        Title="Waiting..."
		CanResize="False"
		ShowInTaskbar="False"
		WindowStartupLocation="CenterOwner"
		SizeToContent="WidthAndHeight">
	<Border Background="#EA202225" Margin="20">
		<Border.Effect>
			<DropShadowEffect OffsetX="0" OffsetY="10" BlurRadius="20" Color="#55000000"/>
		</Border.Effect>
		<Label Foreground="White" FontWeight="DemiBold" FontSize="16" Margin="60 40" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding $parent[Window].Title}"/>
	</Border>
</Window>
